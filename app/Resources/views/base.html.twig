<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Le BestYear{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/base.css') }}" type="text/css" />
        {% block stylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}" />
        <script src="{{ asset('js/jquery-1.10.2.min.js') }}"></script>
    </head>
    <body>
        <div id="header">
            <a href="{{ path('bestyear_main_homepage') }}"><div id="logo"></div></a>
            {% block topBar %}
            {% endblock %}
        </div>
        <div id="layout">
            <div id="leftBar">
                <div id="leftWhiteArrow"></div>
                <a href="#home">
                    <div id="homeLeftBar">
                        <div id="homeIcon"></div>
                    </div>
                </a>
                
                {% block leftBar %}
                {% endblock %}

            </div>
            <div id="content">
                {% block content %}{% endblock %}
            </div>
        </div>
        <div id="footer">
            © <a href="http://www.theotimeloiseau.com">Théotime Loiseau</a> - 2013<br/>
        </div>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
